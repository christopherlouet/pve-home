{
  "id": null,
  "uid": "backup-overview",
  "title": "Backup Overview",
  "description": "Overview of vzdump backup jobs: status, storage usage, and history across all Proxmox nodes.",
  "tags": [
    "backup",
    "vzdump",
    "proxmox"
  ],
  "timezone": "browser",
  "editable": false,
  "graphTooltip": 1,
  "refresh": "5m",
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "node",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(pve_up, node)",
        "definition": "label_values(pve_up, node)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "title": "Backup Status",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "collapsed": false
    },
    {
      "title": "Backup Storage Usage",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 1
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 0.7
              },
              {
                "color": "red",
                "value": 0.85
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "pve_storage_usage_bytes{node=~\"$node\", storage=~\".*backup.*|local\"} / pve_storage_size_bytes{node=~\"$node\", storage=~\".*backup.*|local\"}",
          "legendFormat": "{{ node }} - {{ storage }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Backup Storage - Used vs Total",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 8,
        "y": 1
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "colorMode": "value",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "pve_storage_usage_bytes{node=~\"$node\", storage=~\".*backup.*|local\"}",
          "legendFormat": "{{ node }}/{{ storage }} used",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Backup Storage - Total Capacity",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 8,
        "y": 5
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "colorMode": "value",
        "graphMode": "none"
      },
      "targets": [
        {
          "expr": "pve_storage_size_bytes{node=~\"$node\", storage=~\".*backup.*|local\"}",
          "legendFormat": "{{ node }}/{{ storage }} total",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Active Backup Alerts",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 1
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "expr": "count(ALERTS{alertname=~\"Backup.*\", alertstate=\"firing\"}) or vector(0)",
          "legendFormat": "Firing Alerts",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Storage Usage History",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 9
      },
      "collapsed": false
    },
    {
      "title": "Backup Storage Usage Over Time",
      "type": "timeseries",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 10
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "pointSize": 5,
            "showPoints": "auto"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 0.7
              },
              {
                "color": "red",
                "value": 0.85
              }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": [
            "lastNotNull",
            "min",
            "max"
          ]
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "targets": [
        {
          "expr": "pve_storage_usage_bytes{node=~\"$node\", storage=~\".*backup.*|local\"} / pve_storage_size_bytes{node=~\"$node\", storage=~\".*backup.*|local\"}",
          "legendFormat": "{{ node }} - {{ storage }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Proxmox Guests",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 20
      },
      "collapsed": false
    },
    {
      "title": "VM/LXC Status per Node",
      "type": "table",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 21
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            }
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Node"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 120
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Guest"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 150
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Type"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 80
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Status"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 100
              },
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-text"
                }
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "running": {
                        "color": "green",
                        "text": "running"
                      },
                      "stopped": {
                        "color": "red",
                        "text": "stopped"
                      }
                    }
                  }
                ]
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Disk (GB)"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 100
              },
              {
                "id": "decimals",
                "value": 1
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Node",
            "desc": false
          }
        ]
      },
      "transformations": [
        {
          "id": "seriesToColumns",
          "options": {
            "byField": "id"
          }
        },
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "node": "Node",
              "name": "Guest",
              "type": "Type",
              "status": "Status",
              "Value #B": "Disk (GB)"
            }
          }
        }
      ],
      "targets": [
        {
          "expr": "pve_guest_info{node=~\"$node\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "pve_disk_size_bytes{node=~\"$node\"} / 1024 / 1024 / 1024",
          "format": "table",
          "instant": true,
          "refId": "B"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
