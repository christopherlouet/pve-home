{
  "id": null,
  "uid": "node-exporter",
  "title": "Node Exporter - System Metrics",
  "description": "System metrics from node_exporter: CPU, memory, disk, network",
  "tags": ["node-exporter", "system"],
  "timezone": "browser",
  "editable": false,
  "graphTooltip": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(node_uname_info, instance)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" }
      }
    ]
  },
  "panels": [
    {
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\"}[5m])) * 100)",
          "legendFormat": "{{ instance }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$instance\"} / node_memory_MemTotal_bytes{instance=~\"$instance\"})) * 100",
          "legendFormat": "{{ instance }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Disk Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay\", instance=~\"$instance\"} / node_filesystem_size_bytes{fstype!~\"tmpfs|overlay\", instance=~\"$instance\"})) * 100",
          "legendFormat": "{{ instance }} - {{ mountpoint }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Network Traffic",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "irate(node_network_receive_bytes_total{device!~\"lo|docker.*|br.*|veth.*\", instance=~\"$instance\"}[5m])",
          "legendFormat": "{{ instance }} {{ device }} RX",
          "refId": "A"
        },
        {
          "expr": "-irate(node_network_transmit_bytes_total{device!~\"lo|docker.*|br.*|veth.*\", instance=~\"$instance\"}[5m])",
          "legendFormat": "{{ instance }} {{ device }} TX",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Load Average",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "fillOpacity": 10,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "node_load1{instance=~\"$instance\"}",
          "legendFormat": "{{ instance }} 1m",
          "refId": "A"
        },
        {
          "expr": "node_load5{instance=~\"$instance\"}",
          "legendFormat": "{{ instance }} 5m",
          "refId": "B"
        },
        {
          "expr": "node_load15{instance=~\"$instance\"}",
          "legendFormat": "{{ instance }} 15m",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Disk I/O",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "irate(node_disk_read_bytes_total{instance=~\"$instance\"}[5m])",
          "legendFormat": "{{ instance }} {{ device }} read",
          "refId": "A"
        },
        {
          "expr": "-irate(node_disk_written_bytes_total{instance=~\"$instance\"}[5m])",
          "legendFormat": "{{ instance }} {{ device }} write",
          "refId": "B"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
