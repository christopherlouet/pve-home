{
  "id": null,
  "uid": "application-overview",
  "title": "Application Overview",
  "description": "Overview dashboard for monitored applications. Filter by app and environment labels.",
  "tags": ["application", "overview"],
  "timezone": "browser",
  "editable": false,
  "graphTooltip": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "app",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(up, app)",
        "definition": "label_values(up, app)",
        "refresh": 2,
        "includeAll": false,
        "multi": false,
        "sort": 1
      },
      {
        "name": "environment",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": "label_values(up{app=\"$app\"}, environment)",
        "definition": "label_values(up{app=\"$app\"}, environment)",
        "refresh": 2,
        "includeAll": true,
        "multi": false,
        "sort": 1,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "links": [
    {
      "title": "HTTP Probes",
      "url": "/d/http-probes?var-app=$app&var-environment=$environment",
      "icon": "external link",
      "type": "link",
      "targetBlank": false
    },
    {
      "title": "PostgreSQL",
      "url": "/d/postgresql?var-app=$app&var-environment=$environment",
      "icon": "external link",
      "type": "link",
      "targetBlank": false
    },
    {
      "title": "Docker Containers",
      "url": "/d/docker-containers?var-app=$app&var-environment=$environment",
      "icon": "external link",
      "type": "link",
      "targetBlank": false
    }
  ],
  "panels": [
    {
      "type": "row",
      "title": "Health Summary",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Services Up",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "targets": [
        {
          "expr": "count(up{app=\"$app\", environment=~\"$environment\"} == 1)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Services Down",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "targets": [
        {
          "expr": "count(up{app=\"$app\", environment=~\"$environment\"} == 0) OR on() vector(0)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "HTTP Probe Success",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 90 },
              { "color": "green", "value": 99 }
            ]
          },
          "unit": "percent",
          "decimals": 1
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "targets": [
        {
          "expr": "avg(probe_success{app=\"$app\", environment=~\"$environment\"}) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Avg Probe Latency",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.5 },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "s",
          "decimals": 3
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["mean"] }
      },
      "targets": [
        {
          "expr": "avg(probe_duration_seconds{app=\"$app\", environment=~\"$environment\"})",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "DB Connections",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 90 }
            ]
          },
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "targets": [
        {
          "expr": "sum(pg_stat_activity_count{app=\"$app\", environment=~\"$environment\", state=\"active\"})",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Containers Running",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "targets": [
        {
          "expr": "count(container_last_seen{app=\"$app\", environment=~\"$environment\", name!=\"\"})",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "HTTP Probes",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Probe Success",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 20,
            "pointSize": 5,
            "showPoints": "never"
          },
          "unit": "bool",
          "min": 0,
          "max": 1
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "lastNotNull"] }
      },
      "targets": [
        {
          "expr": "probe_success{app=\"$app\", environment=~\"$environment\"}",
          "legendFormat": "{{probe}} - {{target}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Probe Latency",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "never"
          },
          "unit": "s",
          "decimals": 3
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "expr": "probe_duration_seconds{app=\"$app\", environment=~\"$environment\"}",
          "legendFormat": "{{probe}} - {{target}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "Node Resources",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false
    },
    {
      "type": "gauge",
      "title": "CPU Usage",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 1
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "(1 - avg(rate(node_cpu_seconds_total{app=\"$app\", environment=~\"$environment\", mode=\"idle\"}[5m]))) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Memory Usage",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 1
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes{app=\"$app\", environment=~\"$environment\"} / node_memory_MemTotal_bytes{app=\"$app\", environment=~\"$environment\"})) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Disk Usage",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "decimals": 1
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{app=\"$app\", environment=~\"$environment\", fstype!~\"tmpfs|overlay\", mountpoint=\"/\"} / node_filesystem_size_bytes{app=\"$app\", environment=~\"$environment\", fstype!~\"tmpfs|overlay\", mountpoint=\"/\"})) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "Database (PostgreSQL)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 21 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Connections by State",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 30,
            "stacking": { "mode": "normal" }
          },
          "unit": "none"
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "expr": "pg_stat_activity_count{app=\"$app\", environment=~\"$environment\"}",
          "legendFormat": "{{state}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Transactions / sec",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "ops"
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{app=\"$app\", environment=~\"$environment\"}[1m])",
          "legendFormat": "commits",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback{app=\"$app\", environment=~\"$environment\"}[1m])",
          "legendFormat": "rollbacks",
          "refId": "B"
        }
      ]
    },
    {
      "type": "row",
      "title": "Containers (Docker)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 30 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Container CPU Usage",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 31 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "stacking": { "mode": "normal" }
          },
          "unit": "percent",
          "decimals": 1
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{app=\"$app\", environment=~\"$environment\", name!=\"\"}[1m])) * 100",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 31 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "stacking": { "mode": "normal" }
          },
          "unit": "bytes"
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{app=\"$app\", environment=~\"$environment\", name!=\"\"}",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "Services Status",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 39 },
      "collapsed": false
    },
    {
      "type": "table",
      "title": "All Services",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 40 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" }
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [
              { "id": "custom.width", "value": 80 },
              { "id": "mappings", "value": [
                { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" } } },
                { "type": "value", "options": { "1": { "text": "UP", "color": "green" } } }
              ]},
              { "id": "custom.cellOptions", "value": { "type": "color-text" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "job" },
            "properties": [
              { "id": "displayName", "value": "Job" },
              { "id": "custom.width", "value": 200 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "instance" },
            "properties": [
              { "id": "displayName", "value": "Instance" },
              { "id": "custom.width", "value": 180 }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "Value", "desc": false }]
      },
      "transformations": [
        {
          "id": "filterFieldsByName",
          "options": {
            "include": { "pattern": "job|instance|Value" }
          }
        }
      ],
      "targets": [
        {
          "expr": "up{app=\"$app\", environment=~\"$environment\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
