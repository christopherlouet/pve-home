    {
      "title": "Active Alerts",
      "type": "table",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "alertname" },
            "properties": [
              { "id": "custom.width", "value": 200 },
              { "id": "links", "value": [
                {
                  "title": "View in Prometheus",
                  "url": "http://192.168.1.51:9090/graph?g0.expr=ALERTS%7Balertname%3D%22${__data.fields.alertname}%22%7D&g0.tab=1",
                  "targetBlank": true
                }
              ]}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "severity" },
            "properties": [
              { "id": "custom.width", "value": 100 },
              { "id": "custom.cellOptions", "value": { "type": "color-background" } },
              { "id": "mappings", "value": [
                { "type": "value", "options": { "critical": { "color": "red", "text": "CRITICAL" } } },
                { "type": "value", "options": { "warning": { "color": "orange", "text": "WARNING" } } },
                { "type": "value", "options": { "info": { "color": "blue", "text": "INFO" } } }
              ]}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "alertstate" },
            "properties": [
              { "id": "custom.width", "value": 90 },
              { "id": "custom.cellOptions", "value": { "type": "color-background" } },
              { "id": "mappings", "value": [
                { "type": "value", "options": { "firing": { "color": "red", "text": "FIRING" } } },
                { "type": "value", "options": { "pending": { "color": "#EAB839", "text": "PENDING" } } }
              ]}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "instance" },
            "properties": [{ "id": "custom.width", "value": 160 }]
          },
          {
            "matcher": { "id": "byName", "options": "node" },
            "properties": [{ "id": "custom.width", "value": 100 }]
          },
          {
            "matcher": { "id": "byName", "options": "summary" },
            "properties": [{ "id": "custom.width", "value": 380 }]
          },
          {
            "matcher": { "id": "byName", "options": "Time" },
            "properties": [{ "id": "custom.hidden", "value": true }]
          },
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [{ "id": "custom.hidden", "value": true }]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "severity", "desc": false }],
        "footer": { "show": true, "reducer": ["count"], "countRows": true }
      },
      "targets": [
        {
          "expr": "ALERTS{alertstate=~\"firing|pending\", alertname=~\"$alertname\", severity=~\"$severity\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
