{
  "id": null,
  "uid": "pve-exporter",
  "title": "Proxmox VE - Cluster Metrics",
  "description": "Proxmox VE metrics from pve-exporter: nodes, VMs, storage",
  "tags": ["proxmox", "pve-exporter"],
  "timezone": "browser",
  "editable": false,
  "graphTooltip": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "node",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(pve_up, id)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": "All", "value": "$__all" }
      }
    ]
  },
  "panels": [
    {
      "title": "Node Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "UP", "color": "green" }, "0": { "text": "DOWN", "color": "red" } } }
          ],
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "pve_up{id=~\"$node\"}",
          "legendFormat": "{{ id }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Running VMs",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "count(pve_guest_info{status=\"running\", node=~\"$node\"})",
          "legendFormat": "Running",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Stopped VMs",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "count(pve_guest_info{status=\"stopped\", node=~\"$node\"}) or vector(0)",
          "legendFormat": "Stopped",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Total Storage Used",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "avg(pve_storage_usage_bytes / pve_storage_size_bytes) * 100",
          "legendFormat": "Avg Storage",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Node CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "pve_cpu_usage_ratio{id=~\"$node\"} * 100",
          "legendFormat": "{{ id }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Node Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "(pve_memory_usage_bytes{id=~\"$node\"} / pve_memory_size_bytes{id=~\"$node\"}) * 100",
          "legendFormat": "{{ id }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Storage Usage by Pool",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "targets": [
        {
          "expr": "(pve_storage_usage_bytes{node=~\"$node\"} / pve_storage_size_bytes{node=~\"$node\"}) * 100",
          "legendFormat": "{{ node }}/{{ storage }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "VM CPU Usage (Top 10)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "custom": {
            "fillOpacity": 10,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "topk(10, pve_cpu_usage_ratio{id=~\"qemu/.*\", node=~\"$node\"} * 100)",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "VM Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": false
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "pve_memory_usage_bytes{id=~\"qemu/.*\", node=~\"$node\"}",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
